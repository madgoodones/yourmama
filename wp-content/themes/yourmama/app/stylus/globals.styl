// Todo e qualquer estilo para elementos globais
box-sizing-reset()

body
html
	max-width 1920px
	margin 0 auto
	padding 0
	font-size 100%
	font-family 'Gobold', sans-serif
	line-height 1.3
	text-transform uppercase
	
img
	max-width 100%
	
p
	margin 0 0 rem(15px)
	padding 0
	&:last-child
		margin 0
		
strong
	font-weight 700
	
main
	overflow hidden
	zoom 1

a
	text-decoration none !important
	color inherit
	&:hover, &:visited, &:active
		color inherit
		
.fixed
	position fixed !important