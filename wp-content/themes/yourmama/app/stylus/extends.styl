// Todo e qualquer estilo que poderá ser usado por vários elementos
.container
	center(1270px)
	padding rem(0 15px)
	
.max-page
	max-width 1920px
	margin 0 auto
	
.bg-parallax
	background-size cover
	background-repeat repeat
	background-position center
	+above(970px)
		background-attachment fixed
		background-position 50% 50%
	
.align-middle
	display table
	width 100%
	height 100%
	table-layout fixed
	.container
		display table-cell
		width 100%
		vertical-align middle
		
for number in 0px 5px 10px 15px 20px 25px 30px 35px 40px 45px 50px 70px 100px
	.padding-{number}
		padding-top number !important
		padding-bottom number !important
	.padding-top-{number}
		padding-top number !important
	.padding-bottom-{number}
		padding-bottom number !important
		
.color-white
	color $white !important
	
.color-black
	color $black !important
	
.color-blue
	color #3372a4 !important
	
.color-red
	color #c44a4d !important
	
.page-header
	margin 0
	padding rem(50px 15px 55px)
	border 0
	
	.title
		position relative
		display inline-block
		margin 0
		font-size rem(26px)
		font-weight 600
		color #3372a4
		letter-spacing 1.5px
		text-transform uppercase
		
		&--brand-red:before,
		&--brand-white:before,
		&--brand-blue:before
			content ''
			absolute: auto -15px -15px auto
			size: 30px, 16px
			background-image url('../img/page-header-red.png')
			cover()
		&--brand-white:before
			background-image url('../img/page-header-white.png')
		&--brand-blue:before
			background-image url('../img/page-header-blue.png')
		
.uppercase
	text-transform uppercase
	
.relative
	position relative
	overflow hidden
	
.animated-fast
	animation-duration 1s !important
.animated-medium
	animation-duration 2.5s !important
.animated-slow
	animation-duration 5s !important
	
.z-index
	z-index 999